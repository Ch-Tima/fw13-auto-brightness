[Unit]
Description=Auto Brightness Iluminance Service (github.com/Ch-Tima)
After=graphical.target

[Service]
ExecStart=?ES /home/?U/.config/autobrightness/aib.conf
Restart=always
RestartSec=30
User=?U
WorkingDirectory=?WD
Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/?ID/bus
StandardOutput=append:/var/log/autobrightness.log
StandardError=append:/var/log/autobrightness_error.log

[Install]
WantedBy=graphical.target
